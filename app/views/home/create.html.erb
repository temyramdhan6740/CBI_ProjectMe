<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Create</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <%= link_to root_path do 'Home' end %>
                    </li>
                    <li class="breadcrumb-item active">
                        <%= link_to create_path do 'Create' end %>
                    </li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Create new Blog</h3>
                    </div>

                    <%= form_for (@new), url: createProgress_path do |f| %>
                    <div class="card-body">
                        
                        <div class="form-group">
                            <%= f.label 'Title', for: 'cbiTitle' %>
                            <%= f.text_field :blog_title, name: 'title', class: 'form-control', id: 'cbiTitle', placeholder: 'Title', required: '' %>
                        </div>
                        <div class="form-group">
                            <label for="cbiDesc">Description</label>
                            <textarea name="desc" class="form-control" id="cbiDesc" placeholder="Description" required></textarea>
                            <%= f.label 'Description', for: 'cbiDesc' %>
                            <%= f.text_area :blog_desc, name: 'title', class: 'form-control', id: 'cbiTitle', placeholder: 'Title', required: '' %>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Save</button>

                    </div>
                    <% end %>

                </div>
            </div>
        </div>
    </div>
</div>